{
  "paths": {
    "log_dir": "logs",
    "kismet_logs": ".",
    "ignore_lists": {
      "mac": "mac_ignore.json",
      "ssid": "ssid_ignore.json"
    }
  },
  "api_keys": {
    "wigle": ""
  },
  "search": {
    "lat_min": null,
    "lat_max": null,
    "lon_min": null,
    "lon_max": null
  },
  "timing": {
    "check_interval": 60,
    "list_update_interval": 5,
    "time_windows": {
        "recent": 5,
        "medium": 10,
        "old": 15,
        "oldest": 20
    }
  },
  "kismet_health": {
    "enabled": true,
    "check_interval_cycles": 5,
    "data_freshness_threshold_minutes": 5,
    "auto_restart": false,
    "max_restart_attempts": 3,
    "startup_script": "./start_kismet_clean.sh",
    "interface": "wlan0mon"
  },
  "behavioral_drone_detection": {
    "enabled": true,
    "min_appearances": 3,
    "confidence_threshold": 0.60,
    "signal_variance_threshold": 20,
    "rapid_movement_threshold_mps": 15.0,
    "hovering_radius_meters": 50.0,
    "brief_appearance_seconds": 300,
    "high_signal_threshold": -50,
    "probe_frequency_per_minute": 10,
    "history_cleanup_hours": 24
  }
}
